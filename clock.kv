<LabelHuge@Label>:
     font_name: 'Roboto'
     font_size: 200
     markup: True

<LabelBig@Label>:
     font_name: 'Roboto'
     font_size: 100
     markup: True

<LabelMedium@Label>:
     font_name: 'Roboto'
     font_size: 50
     markup: True

<LabelSmall@Label>:
     font_name: 'Roboto'
     font_size: 30
     markup: True


<>

BoxLayout:
     orientation: 'vertical'
     padding: 20
     margins: 0


     BoxLayout:

          LabelHuge:
               id: time
               text: '00:00'
               size_hint: (.7, None)

          LabelBig:
               id: ampm
               text: 'AM'
               size_hint: (.3, None)
               text_size: self.size
               halign: 'left'
               bold: True

     
     LabelMedium:
          id: date
          text: '00/00/0000 - Monday'

     BoxLayout:
          padding: 40
          halign: 'Top'

          LabelSmall:
               id: ongoingEvent     
               text: 'Ongoing - Study'


          LabelSmall:
               id: upcomingEvent     
               text: 'Upcoming - Break'
